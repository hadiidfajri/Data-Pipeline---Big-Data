# PostgreSQL Configuration
POSTGRES_USER=elt_user
POSTGRES_PASSWORD=elt_password
POSTGRES_DB=elt_database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC_POSTGRES=india_finance_topic
KAFKA_TOPIC_UPI=upi_transaction_topic

# Spark Configuration
SPARK_MASTER=spark://spark-master:7077
SPARK_APP_NAME=ELT_Pipeline

# HDFS Configuration
HDFS_NAMENODE=hdfs://namenode:9000
HDFS_RAW_PATH=/data/raw
HDFS_STAGING_PATH=/data/staging
HDFS_CURATED_PATH=/data/curated

# Hive Configuration
HIVE_METASTORE_URI=thrift://hive-metastore:9083
HIVE_DATABASE=elt_dwh

# Airflow Configuration
AIRFLOW_FERNET_KEY=your_fernet_key_here_generate_with_cryptography
AIRFLOW_SECRET_KEY=your_secret_key_here
AIRFLOW_HOME=/opt/airflow

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/logs/elt.log